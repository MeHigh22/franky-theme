<main>
  <div class="banner page-width">
    <div class="wrapperBanner pure-g">
      <div class="left pure-u-1 pure-u-md-10-24">

        {% if request.path contains 'whyus' %}
        <div class="section_2-first pure-u-1 pure-u-md-19-24">
        <div class="section_2_title whyUs">
          <button>{{ section.settings.txt_header }}
</button>
        </div>
      </div>
{% else %}
{% endif %}

        
        <h2 class="col-1">
          {{ section.settings.txt_1 }}
        </h2>
        <p class="col-2">{{ section.settings.txt_2 }}</p> 
        <br>
        {% if section.settings.html != blank %}
          {{ section.settings.html }}
        {% endif %}
        {% if section.settings.description != blank %}
          {{ section.settings.description }}
        {% endif %}
        <a class="p_btn" href="/pages/quiz-collection">{{ section.settings.call_to_action }}</a>
      </div>
      <div class="bgRight pure-u-1 pure-u-md-14-24">
        <img class="right_img" src="{{ section.settings.image_2 | image_url }}" alt="">
      </div>
    </div>
    {% if section.settings.logo_1 != blank %}
      <div class="navmenu">
        <div class="prenav pure-g">
          <div class="col-6 pure-u-1 pure-u-md-5-24">
            <img src="{{ section.settings.logo_1 | image_url }}" alt="">
            <h5>{{ section.settings.txt_3 }}</h5>
          </div>
          <div class="col-3 pure-u-1 pure-u-md-5-24">
            <img src="{{ section.settings.logo_2 | image_url }}" alt="">
            <h5>{{ section.settings.txt_4 }}</h5>
          </div>
          <div class="col-4 pure-u-1 pure-u-md-5-24">
            <img src="{{ section.settings.logo_3 | image_url }}" alt="">
            <h5>{{ section.settings.txt_5 }}</h5>
          </div>
          {% comment %}
          <div class="col-5 pure-u-1 pure-u-md-9-24">
            <p>Excellent</p>
            <img class="stars" src="https://cdn.shopify.com/s/files/1/0724/4270/8244/files/star.png" alt="">
            <div class="col-7">
              <p style="color: black">444</p>
              <p>reviews on</p>
            </div>
            <div class="col-8">
              <img src="https://cdn.shopify.com/s/files/1/0724/4270/8244/files/trust.png" alt="">
            </div>
          </div>
      {% endcomment %}
        </div>
      </div>
    {% endif %}
  </div>
</main>

