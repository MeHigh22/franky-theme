      "label": "Link"
    },
    {
      "label": "text_1",
      "id": "text_1",
      "type": "text"
    },
    {
      "label": "text_2",
      "id": "text_2",
      "type": "text"
    },
    {
      "label": "text_3",
      "id": "text_3",
      "type": "text"
    },
    {
      "label": "call to action read more",
      "id": "read_posts",
      "type": "text"
    },
    {
      "label": "call to action",
      "id": "call_to_action",
