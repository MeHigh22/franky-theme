<div class="healthBenifets">
  <div class="wrapperr">
    <div class="benifetsText">
      <button class="casual_btn">{{ section.settings.text_1 }}</button>
      <h1>{{ section.settings.text_2 }}</h1>
    </div>
    <div class="timeline">
      <div class=" pure-g">
        <div class="time_div">
          <h3 class="time">1</h3>
        </div>
        <div class="img-class pure-u-1 pure-u-md-12-24">
          <img src="{{ section.settings.image_1 | image_url }}" alt="">
        </div>
        <div class=" text-class pure-u-1 pure-u-md-12-24">
          <h3>{{ section.settings.text_3 }}</h3>
          <p>
            {{ section.settings.text_4 }}
          </p>
        </div>
      </div>

      <div class=" pure-g">
        <div class="time_div">
          <h3 class="time">2</h3>
        </div>
        <div class=" text-class pure-u-1 pure-u-md-12-24">
          <h3>{{ section.settings.text_5 }}</h3>
          <p>
            {{ section.settings.text_6 }}
          </p>
        </div>

        <div class="img-class pure-u-1 pure-u-md-12-24">
          <img src="{{ section.settings.image_2 | image_url }}" alt="">
        </div>
      </div>

      <div class=" pure-g">
        <div class="time_div">
          <h3 class="time">3</h3>
        </div>
        <div class="img-class pure-u-1 pure-u-md-12-24">
          <img src="{{ section.settings.image_3 | image_url }}" alt="">
        </div>
        <div class=" text-class pure-u-1 pure-u-md-12-24">
          <h3>{{ section.settings.text_7 }}</h3>
          <p>
            {{ section.settings.text_8 }}
          </p>
        </div>
      </div>
    </div>
  </div>
  <div class="benifets_last">
    <a class="p_btn_2 " 
                          {% if request.path contains '/fr' %}
                      href="https://www.forfranky.be/fr/pages/quiz-collection"
                    {% elsif request.path contains '/nl' %}
                      href="https://www.forfranky.be/nl/pages/quiz-collection"
                    {% else %}
                      href="https://www.forfranky.be/pages/quiz-collection"
                    {% endif %}

      >{{ section.settings.text_9 }}</a>
  </div>
</div>

<style>
    .healthBenifets {
    background-image: url({{ section.settings.custom_bg | image_url }});
    /* background-position: center; */
    background-size: cover;
    background-repeat: no-repeat;
