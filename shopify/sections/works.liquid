
<section>
  <div style="background-image: url('{{ section.settings.bg | image_url }}');"
 class="howworksec secspacing">
        <div class="wrapper">
            <div class="workmain">
                <div class="workh">
                    <h1>{{ section.settings.title1 }}</h1>
                </div>
                <h2>{{ section.settings.title2 }}</h2>
            </div>
            <div class="workbox">
                <div class="work1">
                    <img src="{{ section.settings.image1 | image_url }}" alt="">
                   
                </div>
                <div class="work2">
                    <h1>{{ section.settings.title3 }}</h1>
                    <p>{{ section.settings.para1 }}</p>
                    <div class="arrow1">
                        <img src="{{ section.settings.image2 | image_url }}" alt="">
                    </div>
                    
                </div>
                <div class="work2">
                    <h1>{{ section.settings.title4 }}</h1>
                    <p>{{ section.settings.para2 }}</p>
                    <div class="arrow2">
                        <img src="{{ section.settings.image3 | image_url }}" alt="">
                    </div>
                </div>
                <div class="work1">
                    <img src="{{ section.settings.image4 | image_url }}" alt="">
                </div>
                <div class="work1">
                    <img src="{{ section.settings.image5 | image_url }}" alt="">
                </div>
                <div class="work2">
                    <h1>{{ section.settings.title5 }}</h1>
                    <p>{{ section.settings.para3 }}</p>
                </div>
            </div>
            <div class="workbtn">
                <a class="p_btn_2 " 
                                      {% if request.path contains '/fr' %}
                      href="https://www.forfranky.be/fr/pages/quiz-collection"
                    {% elsif request.path contains '/nl' %}
                      href="https://www.forfranky.be/nl/pages/quiz-collection"
                    {% else %}
                      href="https://www.forfranky.be/pages/quiz-collection"
                    {% endif %}

                  >{{ section.settings.call_to_action }}</a>
            </div>
        </div>
    </div>
</section>




