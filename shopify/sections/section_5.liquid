<div class="section_5">
  <div class="section_5-upper pure-g wrapperr">
    <div class="section_5-left pure-u-1 pure-u-md-12-24">
      <div class="section_3-button">
        <button>{{ section.settings.text_1 }}</button>
      </div>
      <div class="section_3-title">
        <h1>{{ section.settings.text_2 }}</h1>
      </div>
      <div class="section_3-subtitle">
        <p>
          {{ section.settings.text_3 }}
        </p>
      </div>
      <div class="section_3-btn">
        <a class="p_btn" 
                              {% if request.path contains '/fr' %}
                      href="https://www.forfranky.be/fr/pages/quiz-collection"
                    {% elsif request.path contains '/nl' %}
                      href="https://www.forfranky.be/nl/pages/quiz-collection"
                    {% else %}
                      href="https://www.forfranky.be/pages/quiz-collection"
                    {% endif %}

          >{{ section.settings.call_to_action }}</a>
      </div>
    </div>
    <div class="section_5-right pure-u-1 pure-u-md-12-24">
      <div class="section_5-image-upper">
        <img src="{{ section.settings.image_1 | image_url }}" alt="">
      </div>
    </div>
  </div>
  <div class="arrow-upper">
    <img src="{{ section.settings.image_2 | image_url }}" alt="arrow">
  </div>
  <div class="section_5-lower pure-g wrapperr">
