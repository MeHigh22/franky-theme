      </div>
      <div class="section_5-desc">
        <p>
          {{ section.settings.text_9 }}
        </p>
      </div>
    </div>
  </div>
  <div class="arrow-lower">
    <img src="{{ section.settings.image_6 | image_url }}" alt="arrow">
  </div>
  <div class="section_3-btn section_5-lower_btn">
        <a class="p_btn" 
              {% if request.path contains '/fr' %}
                      href="https://www.forfranky.be/fr/pages/quiz-collection"
                    {% elsif request.path contains '/nl' %}
                      href="https://www.forfranky.be/nl/pages/quiz-collection"
                    {% else %}
                      href="https://www.forfranky.be/pages/quiz-collection"
                    {% endif %}
          >
          {{ section.settings.call_to_action_two }}</a>
      </div>
</div>

